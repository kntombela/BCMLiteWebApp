<!-- Breadcrumbs-->
<ol class="breadcrumb mb-2 arr-bread">
    <li class="breadcrumb-item">
        <a href="/#/dashboard">Home</a>
    </li>
    <li class="breadcrumb-item">
        <a href="" ng-click="redirectToDepartmentDetail()">Processes</a>
    </li>
    <li class="breadcrumb-item active">Details</li>
</ol>
<div class="container-fluid">
    <div class="row">
        <div class="col-4">
            <h4>{{process.name}}</h4>
            <p class="mb-0">{{process.description}}</p>
            <p>{{process.location}}</p>
            <h5 class="text-muted">Recovery Details</h5>
            <div>
                <label for="rto">RTO:</label>
                <p class="mb-0 d-inline" id="rto">{{process.rto}}</p>
            </div>
            <div>
                <label for="mtpd">MTPD:</label>
                <p class="mb-0 d-inline" id="mtpd">{{process.mtpd}}</p>
            </div>
            <div>
                <label for="site-dependent">Site Dependent:</label>
                <p class="mb-0 d-inline" id="site-dependent">{{process.siteDependent}}</p>
            </div>
            <div>
                <label for="remote-working">Remote Working:</label>
                <p class="mb-0 d-inline" id="remote-working">{{process.remoteWorking}}</p>
            </div>
            <div>
                <label for="wa-comment">Working Area Comment:</label>
                <p class="mb-0 d-inline" id="wa-comment">{{process.workingAreaComment}}</p>
            </div>
            <hr />
            <h5 class="text-muted">Impact Analysis</h5>
            <div>
                <label for="ops-impact">Operational Impact:</label>
                <p class="mb-0 d-inline" id="ops-impact">{{process.operationalImpact}}</p>
            </div>
            <div>
                <label for="fin-impact">Financial Impact:</label>
                <p class="mb-0 d-inline" id="fin-impact">{{process.financialImpact}}</p>
            </div>
            <h6 class="mt-4">Critical Periods</h6>
            <div>
                <label for="year">Time of Year:</label>
                <p class="mb-0 d-inline" id="year">{{process.criticalTimeYear}}</p>
            </div>
            <div>
                <label for="month">Time of Month:</label>
                <p class="mb-0 d-inline" id="month">{{process.criticalTimeMonth}}</p>
            </div>
            <div>
                <label for="day">Time of Day:</label>
                <p class="mb-0 d-inline" id="day">{{process.criticalTimeDay}}</p>
            </div>
            <div>
                <label for="ct-comment">Critical Time Comment:</label>
                <p class="mb-0 d-inline" id="ct-comment">{{process.criticalTimeComment}}</p>
            </div>
            <hr />
            <h5 class="text-muted">Additional Information</h5>
            <div>
                <label for="sop">SOP:</label>
                <p class="mb-0 d-inline" id="sop">{{process.sop}}</p>
            </div>
            <div>
                <label for="sop">SOP:</label>
                <p class="mb-0 d-inline" id="sop">{{process.sop}}</p>
            </div>
            <div>
                <label for="sop-comment">SOP Comment:</label>
                <p class="mb-0 d-inline" id="sop-comment">{{process.sopComment}}</p>
            </div>
            <div>
                <label for="sla">SLA:</label>
                <p class="mb-0 d-inline" id="sla">{{process.sla}}</p>
            </div>
            <div>
                <label for="sla-comment">SLA Comment:</label>
                <p class="mb-0 d-inline" id="sla-comment">{{process.slaComment}}</p>
            </div>
        </div>
        <div class="col-8">
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a class="nav-link active" data-toggle="tab" data-target="#applications">Applications</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" data-target="#people">People</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" data-target="#third-parties">Third Parties</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" data-target="#documents">Documents</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" data-target="#equipment">Equipment</a>
                </li>
            </ul>
            <div id="resource-tabs" class="tab-content">
                <div class="tab-pane fade show active" id="applications" ng-controller="applicationCtrl" ng-init="getApplicationList()">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th><input type="checkbox" ng-model="checkboxes.checked" id="select_all" /></th>
                                <th>#</th>
                                <th class="sort" ng-click="sort('name')">
                                    Name
                                    <span class="fa fa-sort"
                                          ng-show="sortKey=='name'"
                                          ng-class="{'fa fa-angle-up':reverse,'fa fa-angle-down':!reverse}">
                                    </span>
                                </th>
                                <th class="hide">RTO</th>
                                <th class="hide">RPO</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tr ng-repeat="x in applications|orderBy:sortKey:reverse|filter:search"
                            ng-click="onRowClicked(x.processID)"
                            ng-class="{'selected':checkboxes.items[x.applicationID]}">
                            <td>
                                <input type="checkbox"
                                       ng-model="checkboxes.items[x.applicationID]"
                                       ng-click="$event.stopPropagation();" />
                            </td>
                            <td>{{$index + 1}}</td>
                            <td>
                                <a href="" ng-click="redirectToApplicationDetails(x.applicationID)">{{ x.name }}</a>
                                <span class="badge badge-success" ng-show="isNewRow(x.applicationID)">New</span>
                            </td>
                            <td class="hide">{{x.rto}}</td>
                            <td class="hide">{{x.rpo}}</td>
                            @*<td class="hide">{{x.dateModified | date:'MMM d, y h:mm a'}}</td>*@
                            <td>
                                <div class="dropdown">
                                    <span class="fa fa-ellipsis-v row-options" data-toggle="dropdown"></span>
                                    <ul class="dropdown-menu dropdown-content">
                                        <li><a ng-click="">Edit</a></li>
                                        <li><a data-target="#deleteModal" data-toggle="modal">Delete</a></li>
                                        <li><a href="" ng-click="redirectToApplicationDetails(x.applicationID)">Details</a></li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    </table>
                    <p>{{recordsError}}</p>
                </div>
                <div class="tab-pane fade" id="people">
                    <p>Insert people resource table..</p>
                </div>
                <div class="tab-pane fade" id="third-parties">
                    <p>Insert third party resource table.</p>
                </div>
                <div class="tab-pane fade" id="documents">
                    <p>Insert documents resource table.</p>
                </div>
                <div class="tab-pane fade" id="equipment">
                    <p>Insert equipment resource table.</p>
                </div>
            </div>
        </div>
    </div>
</div>




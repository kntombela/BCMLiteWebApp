@{
    ViewBag.Title = "Organogram";
}

<div ng-app="myApp" ng-controller="organisationsCtrl">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="~/Home/Dashboard">Home</a>
        </li>
        <li class="breadcrumb-item active">@ViewBag.Title</li>
    </ol>
    <div class="row">
        <div class="col-12">
            <p>Please select organisation to begin</p>
            @if (ViewBag.IsAdmin == true)
            {
                <div class="form-group">
                    <select class="form-control"
                            ng-model="organisationId"
                            ng-change="getDepartments(organisationId)"
                            ng-options="organisation.organisationID as organisation.name for organisation in organisations"></select>
                </div>
            }
        </div>
    </div>
    <h1>Departments</h1>
    <p>
        <a href="@Url.Action("Create","Departments")?organisationId={{organisationId}}">Create New</a>
    </p>
    <!-- Table-->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i> Departments
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Revenue Generating</th>
                            <th>Revenue</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="x in departments">
                            <td>{{ x.name }}</td>
                            <td>{{ x.description }}</td>
                            <td>{{ x.revenueGenerating }}</td>
                            <td>{{ x.revenue }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/Scripts/angular.js")
    @Scripts.Render("~/Scripts/app/components/organisations/organisationsController.js")
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/Scripts/sb-admin-datatables.js")
}

@{
    ViewBag.Title = "Organogram";
}

<!-- Breadcrumbs-->
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="/#/dashboard">Home</a>
    </li>
    <li class="breadcrumb-item active">@ViewBag.Title</li>
</ol>
<div class="row mb-3">
    <div class="col-12">
        <h1>Departments</h1>
    </div>
</div>
<!-- Table-->
<p>
    <button type="button" class="btn btn-outline-success" data-target="#addEditDepartment" data-toggle="modal" ng-click="resetRowSelect()">New</button>
    <button type="button" class="btn btn-outline-info" data-target="#addEditDepartment" data-toggle="modal" ng-show="showActions" ng-click="editDepartment(departmentId)">Edit</button>
    <button type="button" class="btn btn-outline-danger" ng-show="showActions" data-target="#deleteModal" data-toggle="modal">Delete</button>
</p>
<table class="table table-hover">
    <thead class="thead-light">
        <tr>
            <th>#</th>
            <th>
                Department
            </th>
            <th>
                Description
            </th>
            <th>
                Revenue Generating
            </th>
            <th>
                Renvenue
            </th>
        </tr>
    </thead>
    <tbody>
        <tr ng-repeat="x in departments" ng-class="{'selected':$index == selectedRow}" ng-click="onRowClicked($index, x.departmentID)">
            <td>{{ $index + 1 }}</td>
            <td>{{ x.name }}</td>
            <td>{{ x.description }}</td>
            <td>{{ x.revenueGenerating }}</td>
            <td>{{ x.revenue }}</td>
        </tr>
    </tbody>
</table>




<!-- Add Department Modal-->
<div id="addEditDepartment" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title mr-auto">Add Department</h4>
                <button type="button" class="close" data-dismiss="modal">×</button>
            </div>
            <div class="modal-body">
                <input type="hidden" class="form-control" ng-model="department.departmentId">
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input type="text" class="form-control" id="name" ng-model="department.name" maxlength="50">
                </div>
                <div class="form-group">
                    <label for="description">Description:</label>
                    <input type="text" class="form-control" id="description" ng-model="department.description" maxlength="100">
                </div>
                <div class="form-group">
                    <label for="revenueGenerating">Revenue Generating:</label>
                    <input type="checkbox" class="form-control" id="revenueGenerating" ng-model="department.revenueGenerating" maxlength="100">
                </div>
                <div class="form-group">
                    <label for="revenue">Revenue:</label>
                    <input type="number" class="form-control" id="revenue" ng-model="department.revenue" maxlength="10">
                </div>

            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-success" ng-click="addDepartment(organisationId)">Save</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Confirm Delete</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">Are you sure you want to delete this item?</div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                <a class="btn btn-primary" data-dismiss="modal" ng-click="deleteDepartment(departmentId, organisationId)">Delete</a>
            </div>
        </div>
    </div>
</div>
